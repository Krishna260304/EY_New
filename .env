# EY Banking AI - Docker Environment Configuration
# Copy this file to .env and modify with your values

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
MYSQL_ROOT_PASSWORD=root_password
MYSQL_DATABASE=ey_banking
MYSQL_USER=ey_user
MYSQL_PASSWORD=ey_password
MYSQL_HOST=mysql
MYSQL_PORT=3306

# ============================================================================
# API CONFIGURATION
# ============================================================================
API_PORT=8000
API_HOST=0.0.0.0
DEBUG=False
LOG_LEVEL=info

# ============================================================================
# GPU CONFIGURATION (Optional)
# ============================================================================
CUDA_VISIBLE_DEVICES=0
GPU_MEMORY_FRACTION=0.8

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
PYTHONUNBUFFERED=1
PYTHONDONTWRITEBYTECODE=1

# ============================================================================
# SECURITY
# ============================================================================
SECRET_KEY=your-secret-key-here-change-in-production
ALLOWED_HOSTS=localhost,127.0.0.1,api

# ============================================================================
# NGINX (Optional)
# ============================================================================
NGINX_PORT=80
NGINX_WORKER_PROCESSES=auto

# ============================================================================
# MONITORING & LOGGING
# ============================================================================
ENABLE_METRICS=true
LOG_FORMAT=json
